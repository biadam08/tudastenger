<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ImportQuestionsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A kérdések importálása CSV fájlból lehetséges.\nA formátum: Kérdés,Kategória,Válasz1,Válasz2,Válasz3,Válasz4,HelyesVálaszSorszáma\nPélda:Mennyi 5*5?,Matematika,10,25,30,15,2\nKevesebb, mint két válasz esetén az adott válaszlehetőséget hagyjuk üresen!\nPélda: Mennyi 6*6?,Matematika,36,18,,,1" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importálás (CSV)"
        tools:ignore="MissingConstraints" />

</LinearLayout>