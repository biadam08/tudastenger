<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_shape_rounded_rectangle"
    android:orientation="vertical"
    android:padding="40dp"
    android:gravity="center">

    <Button
        android:id="@+id/removeWrongAnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_shape_rectangle_button"
        android:text="1 rossz válasz elvétele - 10"
        android:textSize="18sp" />

    <Button
        android:id="@+id/closeHelpPopupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_shape_rectangle_button"
        android:text="Bezárás"
        android:textSize="18sp" />

</LinearLayout>